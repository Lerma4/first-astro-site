---
import Image from "astro/components/Image.astro"
---

<header
    class="flex justify-between items-center px-24 py-12 max-sm:px-5 max-sm:py-10 max-w-7xl justify-self-center w-full mx-auto"
>
    <a href="/" class="flex gap-x-4 items-center">
        <Image
            src="/logo.png"
            alt="my logo"
            width={60}
            height={60}
            class="rounded-md object-cover"
            format="webp"
        />
    </a>

    <ul class="flex gap-x-8">
        <li>
            <a href="/" class="text-red-900 font-bold">Home</a>
        </li>
        <li>
            <a href="/about" class="text-red-900 font-bold">About</a>
        </li>
        <li>
            <a href="/blog" class="text-red-900 font-bold">Blog</a>
        </li>
    </ul>
</header>
